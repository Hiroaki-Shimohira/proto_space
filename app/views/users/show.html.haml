.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{href: "#"}
          %img.media-object{alt: "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", src: "data:image/svg+xml;base64,", style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          ="#{@user.nickname}"
          %span.label.label-default.project-number
            ="#{@user.prototypes.count}"
            %i Projects
        .proto-user
          %span.degree
          = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
            = @user.profile
          .col-md-6
            %h4 Works
            %p
            = @user.works
.container.proto-list
  .row
    -@user_proto.each do |pro|
      .col-sm-4.col-md-3.proto-content
        .btn-group.drop_menu_location
          %button.btn.btn-default.dropdown-toggle{"data-toggle"=>"dropdown", "aria-expanded"=>"false"}
            action
            %span.caret
          %ul.dropdown-menu{:role =>"menu"}
            %li
              = link_to 'delete', prototype_path(pro), method: :delete
            %li
              = link_to 'edit', edit_prototype_path(pro)
