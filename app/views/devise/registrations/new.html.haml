.container.user-new{action: ""}
  =form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              / %input{type: "text", placeholder: "Username", name: "nickname"}/
              = f.text_field :nickname, placeholder: "Username"
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              %input{type: "file"}/
          / %input.user-email{type: "email", placeholder: "E-Mail", name:"email"}/
          = f.email_field :email, placeholder: "E-Mail"
          / %input.user-password{type: "password", placeholder: "Password"}/
          = f.password_field :password, autocomplete: "off", placeholder: 'Password'
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              / %input{type: "text", placeholder: "Member"}/
              = f.text_field :member, placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              / %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Profile"}
              =f.text_area :profile, placeholder: "Profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              / %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Works"}
              = f.text_area :works, placeholder: "Works"
      .row.text-center.user-btn
        %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Save
