.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          = link_to 'Popular PROTO', prototypes_popular_index_path
        %li{role: "presentation"}
          = link_to 'Newest PROTO', root_path
      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    -@prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        -if user_signed_in? && current_user.id == prototype.user_id
          .btn-group.drop_menu_location
            %button.btn.btn-default.dropdown-toggle{"data-toggle"=>"dropdown", "aria-expanded"=>"false"}
              action
              %span.caret
            %ul.dropdown-menu{:role =>"menu"}
              %li
                = link_to 'delete', prototype_path(prototype), method: :delete
              %li
                = link_to 'edit', edit_prototype_path(prototype)
        .thumbnail
          = link_to image_tag(prototype.capture_images.first.image), prototype_path(prototype)
          .caption
            %h3
              = prototype.title
            .proto-meta
              .proto-user
                = link_to "#{prototype.user.nickname}",user_path(prototype.user)
              .proto-posted
                = prototype.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[prototype.created_at.wday]})")
            %ul.proto-tag-list.list-inline
              %li
                %a{href: "#", class: "btn btn-default"} iPad
              %li
                %a{href: "#", class: "btn btn-default"} wireframe
.text-center
  %ul.pagination
    = paginate(@prototypes)
