- if user_signed_in?
  -if @prototype.like_user(current_user.id)
    = button_to prototype_like_path(@prototype, @likes), method: :delete , id: "like-button", class: "btn btn-default increment-button", remote: true do
      = image_tag("icon_heart_red.svg")
      %span
        = @prototype.likes_count
  -else
    = button_to prototype_likes_path(@prototype), id: "like-button",class: "btn btn-default decrement-button", remote: true do
      = image_tag("icon_heart.svg")
      %span
        = @prototype.likes_count
-else
  = image_tag("icon_heart.svg")
  %span
    = @prototype.likes_count
