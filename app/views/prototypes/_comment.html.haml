-@comments.each do |comment_data|
  .media
    .media-left
      %a{href: "#"}
        %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "data:image/svg+xml;base64,", style: "width: 64px; height: 64px;"}/
    .media-body
      %h4#top-aligned-media.media-heading
        =comment_data.user.nickname
        %a.anchorjs-link{href: "#top-aligned-media"}
          %span.anchorjs-icon
      %p
        =comment_data.comment
-if user_signed_in?
  =form_for [ @prototype, @comment ], remote: true do |f|
    %form.form-inline{role: "form"}
      %h4 Write a comment
      .row
        .form-group.col-md-10
          =f.text_area :comment, placeholder: "Your comments", class: "textform-control", id:"comment_text",rows: "3"
        .form-group.col-md-2
          =f.submit "comment", class: "btn btn-primary"
