.container.proto-new{action: ""}
  .col-md-8.col-md-offset-2
    = form_for @prototype do |f|
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, placeholder: "Title", class:"proto-new-title"
      .row
        = f.fields_for @prototype.capture_images do |af|
          .col-md-12
            .cover-image-upload
              / %input{type: "file"}/
              =af.file_field :image
          .col-md-12
            %ul.proto-sub-list.list-group
              %li.list-group-item.col-md-4
                .image-upload
                  / %input{type: "file"}/
                  =af.file_field :image
              %li.list-group-item.col-md-4
                .image-upload
                  / %input{type: "file"}/
                  =af.file_field :image
              %li.list-group-item.col-md-4
                .image-upload-plus
                  %span +
      .row.proto-description
        .col-md-12
          / %input{type: "text", placeholder: "Catch Copy"}/
          =f.text_field :catchcopy, placeholder: "Catch Copy"
        .col-md-12
          / %textarea{name: "", cols: "30", rows: "4", placeholder: "Concept"}
          =f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
            .row
              .col-md-3
                %input{type: "text", placeholder: "Web Design"}/
                / =f.text_field :"", placeholder: "Web Design"
              .col-md-3
                %input{type: "text", placeholder: "UI"}/
                / =f.text_field :"", placeholder: "UI"
              .col-md-3
                %input{type: "text", placeholder: "Application"}/
                / =f.text_field :"", placeholder: "Application"
      .row.text-center.proto-btn
        .btn.btn-lg.btn-primary.btn-block
          =f.submit "Publish"
